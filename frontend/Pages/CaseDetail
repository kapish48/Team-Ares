import React from 'react';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { base44 } from '@/api/base44Client';
import { Card, CardHeader, CardTitle, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { Skeleton } from "@/components/ui/skeleton";
import { ArrowLeft, User, Activity, Pill, Building2, Clock, Brain, CheckCircle, XCircle, AlertCircle, FileText, ExternalLink, FileDown } from 'lucide-react';
import { Link } from 'react-router-dom';
import { createPageUrl } from '@/utils';
import { format } from 'date-fns';
import ReviewInterface from '../components/review/ReviewInterface';
import { toast } from 'sonner';

export default function CaseDetail() {
  const queryClient = useQueryClient();
  const urlParams = new URLSearchParams(window.location.search);
  const requestId = urlParams.get('id');

  const { data: authRequest, isLoading: loadingAuth } = useQuery({
    queryKey: ['authRequest', requestId],
    queryFn: () => base44.entities.AuthorizationRequest.filter({ id: requestId }),
    select: (data) => data[0],
    enabled: !!requestId,
    refetchOnMount: true,
    refetchOnWindowFocus: false
  });

  const { data: patientCase, isLoading: loadingCase } = useQuery({
    queryKey: ['patientCase', authRequest?.patient_case_id],
    queryFn: () => base44.entities.PatientCase.filter({ id: authRequest.patient_case_id }),
    select: (data) => data[0],
    enabled: !!authRequest?.patient_case_id
  });

  const { data: policy, isLoading: loadingPolicy } = useQuery({
    queryKey: ['policy', authRequest?.policy_id],
    queryFn: () => base44.entities.PolicyRule.filter({ id: authRequest.policy_id }),
    select: (data) => data[0],
    enabled: !!authRequest?.policy_id
  });

  const { data: reviewItem } = useQuery({
    queryKey: ['reviewItem', authRequest?.request_id],
    queryFn: () => base44.entities.ReviewQueueItem.filter({ request_id: authRequest.request_id }),
    select: (data) => data[0],
    enabled: !!authRequest?.request_id && authRequest?.decision === 'review_required'
  });

  const reviewMutation = useMutation({
    mutationFn: async ({ decision, notes }) => {
      const user = await base44.auth.me();
      
      // Log AI vs human decision
      await base44.entities.AIFinetuningLog.create({
        log_id: `LOG-${Date.now()}`,
        request_id: authRequest.request_id,
        patient_case_id: authRequest.patient_case_id,
        ai_decision: authRequest.ai_decision,
        ai_confidence: authRequest.confidence_score,
        ai_rationale: authRequest.decision_rationale,
        human_decision: decision,
        override_reason: notes,
        reviewer_name: user.full_name || user.email,
        timestamp: new Date().toISOString(),
        was_correct: authRequest.ai_decision === decision
      });

      // Generate audit report URL
      const auditReportUrl = `${window.location.origin}${createPageUrl(`AuditReport?id=${authRequest.id}`)}`;

      // Update authorization request
      await base44.entities.AuthorizationRequest.update(authRequest.id, {
        decision: decision,
        reviewer_name: user.full_name || user.email,
        reviewer_notes: notes,
        status: 'completed',
        workflow_stage: 'completed',
        decision_timestamp: new Date().toISOString(),
        audit_pdf_url: auditReportUrl
      });

      // Update review queue item
      if (reviewItem) {
        await base44.entities.ReviewQueueItem.update(reviewItem.id, {
          status: 'completed',
          completed_timestamp: new Date().toISOString(),
          assigned_reviewer: user.full_name || user.email
        });
      }

      // Update patient case
      await base44.entities.PatientCase.update(patientCase.id, {
        status: decision
      });
    },
    onSuccess: () => {
      queryClient.invalidateQueries(['authRequest']);
      queryClient.invalidateQueries(['reviewQueue']);
      toast.success('Review submitted successfully');
    }
  });

  const handleApprove = async (notes) => {
    await reviewMutation.mutateAsync({ decision: 'approved', notes });
  };

  const handleDeny = async (notes) => {
    await reviewMutation.mutateAsync({ decision: 'denied', notes });
  };

  if (loadingAuth || loadingCase) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 p-6">
        <div className="max-w-6xl mx-auto space-y-6">
          <Skeleton className="h-12 w-64" />
          <Skeleton className="h-96" />
        </div>
      </div>
    );
  }

  if (!authRequest) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 p-6 flex items-center justify-center">
        <Card className="max-w-md">
          <CardContent className="p-12 text-center">
            <AlertCircle className="w-16 h-16 text-red-500 mx-auto mb-4" />
            <h2 className="text-2xl font-bold text-slate-900 mb-2">Case Not Found</h2>
            <p className="text-slate-600 mb-6">The requested authorization case could not be found.</p>
            <Link to={createPageUrl('Dashboard')}>
              <Button>Return to Dashboard</Button>
            </Link>
          </CardContent>
        </Card>
      </div>
    );
  }

  const statusColors = {
    approved: "bg-green-100 text-green-800 border-green-200",
    denied: "bg-red-100 text-red-800 border-red-200",
    review_required: "bg-amber-100 text-amber-800 border-amber-200",
    processing: "bg-blue-100 text-blue-800 border-blue-200"
  };

  const statusIcons = {
    approved: CheckCircle,
    denied: XCircle,
    review_required: AlertCircle,
    processing: Clock
  };

  const StatusIcon = statusIcons[authRequest.decision];

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 p-6">
      <div className="max-w-6xl mx-auto space-y-6">
        {/* Header */}
        <div>
          <Link to={createPageUrl('Dashboard')}>
            <Button variant="ghost" className="mb-4">
              <ArrowLeft className="w-4 h-4 mr-2" />
              Back to Dashboard
            </Button>
          </Link>
          <div className="flex items-start justify-between">
            <div>
              <h1 className="text-3xl font-bold text-slate-900 mb-2">Authorization Request Details</h1>
              <p className="text-slate-600">Request ID: {authRequest.request_id}</p>
            </div>
            <Badge className={`${statusColors[authRequest.decision]} border text-lg px-4 py-2 flex items-center gap-2`}>
              <StatusIcon className="w-5 h-5" />
              {authRequest.decision?.replace('_', ' ').toUpperCase()}
            </Badge>
          </div>
        </div>

        {/* Audit Report Link - Show if completed */}
        {authRequest.audit_pdf_url && authRequest.status === 'completed' && (
          <Card className="border-2 border-green-500 bg-green-50">
            <CardContent className="p-6">
              <div className="flex items-center justify-between">
                <div className="flex items-center gap-4">
                  <div className="w-12 h-12 bg-green-600 rounded-full flex items-center justify-center">
                    <FileDown className="w-6 h-6 text-white" />
                  </div>
                  <div>
                    <h3 className="text-lg font-semibold text-green-900 mb-1">
                      Audit Report Available
                    </h3>
                    <p className="text-sm text-green-700">
                      Complete audit trail with evidence, timeline, and decision documentation
                    </p>
                  </div>
                </div>
                <Link to={createPageUrl(`AuditReport?id=${authRequest.id}`)}>
                  <Button className="bg-green-600 hover:bg-green-700">
                    <FileText className="w-4 h-4 mr-2" />
                    View Audit Report
                  </Button>
                </Link>
              </div>
            </CardContent>
          </Card>
        )}

        {/* Review Interface - Only show if review required and not completed */}
        {authRequest.decision === 'review_required' && reviewItem && (
          <ReviewInterface
            authRequest={authRequest}
            patientCase={patientCase}
            reviewItem={reviewItem}
            onApprove={handleApprove}
            onDeny={handleDeny}
            isLoading={reviewMutation.isPending}
          />
        )}

        <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {/* Patient Information */}
          <Card>
            <CardHeader className="bg-blue-50 border-b">
              <CardTitle className="flex items-center gap-2">
                <User className="w-5 h-5 text-blue-600" />
                Patient Information
              </CardTitle>
            </CardHeader>
            <CardContent className="p-6 space-y-4">
              <div>
                <p className="text-sm text-slate-600">Patient Name</p>
                <p className="font-semibold text-lg text-slate-900">{patientCase?.patient_name}</p>
              </div>
              <div>
                <p className="text-sm text-slate-600">Patient ID</p>
                <p className="font-medium text-slate-900">{patientCase?.patient_id}</p>
              </div>
              {patientCase?.date_of_birth && (
                <div>
                  <p className="text-sm text-slate-600">Date of Birth</p>
                  <p className="font-medium text-slate-900">
                    {format(new Date(patientCase.date_of_birth), "MMMM d, yyyy")}
                  </p>
                </div>
              )}
              <div>
                <p className="text-sm text-slate-600">Diagnosis</p>
                <p className="font-medium text-slate-900">{patientCase?.diagnosis_name}</p>
                <p className="text-sm text-slate-500">Code: {patientCase?.diagnosis_code}</p>
              </div>
              {patientCase?.genomic_markers && Object.keys(patientCase.genomic_markers).length > 0 && (
                <div>
                  <p className="text-sm text-slate-600 mb-2">Genomic Markers</p>
                  <div className="bg-slate-50 rounded-lg p-3 space-y-1">
                    {Object.entries(patientCase.genomic_markers).map(([key, value]) => (
                      <div key={key} className="flex justify-between text-sm">
                        <span className="text-slate-600">{key}:</span>
                        <span className="font-medium text-slate-900">{value}</span>
                      </div>
                    ))}
                  </div>
                </div>
              )}
              {patientCase?.prior_therapies && patientCase.prior_therapies.length > 0 && (
                <div>
                  <p className="text-sm text-slate-600 mb-2">Prior Therapies</p>
                  <ul className="space-y-1">
                    {patientCase.prior_therapies.map((therapy, idx) => (
                      <li key={idx} className="text-sm text-slate-700 flex items-start gap-2">
                        <span className="text-blue-600 mt-1">•</span>
                        <span>{therapy}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
              {patientCase?.clinical_notes_url && (
                <div className="pt-4 border-t">
                  <a 
                    href={patientCase.clinical_notes_url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    className="flex items-center gap-2 text-blue-600 hover:text-blue-800 font-medium"
                  >
                    <ExternalLink className="w-4 h-4" />
                    View Clinical Documentation
                  </a>
                </div>
              )}
            </CardContent>
          </Card>

          {/* Treatment & Payer Info */}
          <Card>
            <CardHeader className="bg-purple-50 border-b">
              <CardTitle className="flex items-center gap-2">
                <Pill className="w-5 h-5 text-purple-600" />
                Treatment & Coverage
              </CardTitle>
            </CardHeader>
            <CardContent className="p-6 space-y-4">
              <div>
                <p className="text-sm text-slate-600">Treatment Requested</p>
                <p className="font-semibold text-lg text-slate-900">{authRequest.treatment_requested}</p>
              </div>
              <div>
                <p className="text-sm text-slate-600">Insurance Payer</p>
                <div className="flex items-center gap-2 mt-1">
                  <Building2 className="w-4 h-4 text-slate-400" />
                  <p className="font-medium text-slate-900">{authRequest.payer_name}</p>
                </div>
              </div>
              <div>
                <p className="text-sm text-slate-600">Submission Date</p>
                <div className="flex items-center gap-2 mt-1">
                  <Clock className="w-4 h-4 text-slate-400" />
                  <p className="font-medium text-slate-900">
                    {format(new Date(authRequest.submission_timestamp), "MMMM d, yyyy 'at' h:mm a")}
                  </p>
                </div>
              </div>
              {authRequest.decision_timestamp && (
                <div>
                  <p className="text-sm text-slate-600">Decision Date</p>
                  <p className="font-medium text-slate-900">
                    {format(new Date(authRequest.decision_timestamp), "MMMM d, yyyy 'at' h:mm a")}
                  </p>
                </div>
              )}
              {authRequest.processing_time_seconds != null && (
                <div className="p-4 bg-green-50 rounded-lg border border-green-200">
                  <p className="text-sm text-green-900 font-semibold mb-1">Processing Time</p>
                  <p className="text-2xl font-bold text-green-700">
                    {authRequest.processing_time_seconds.toFixed(2)} seconds
                  </p>
                  <p className="text-xs text-green-600 mt-1">Traditional process: 7-14 days</p>
                </div>
              )}
              {authRequest.reviewer_name && (
                <div className="pt-4 border-t">
                  <p className="text-sm text-slate-600">Reviewed By</p>
                  <p className="font-medium text-slate-900">{authRequest.reviewer_name}</p>
                </div>
              )}
            </CardContent>
          </Card>
        </div>

        {/* AI Analysis */}
        <Card>
          <CardHeader className="bg-purple-50 border-b">
            <CardTitle className="flex items-center gap-2">
              <Brain className="w-5 h-5 text-purple-600" />
              AI Analysis & Decision
            </CardTitle>
          </CardHeader>
          <CardContent className="p-6 space-y-6">
            {/* Confidence Score */}
            {authRequest.confidence_score != null && (
              <div>
                <div className="flex items-center justify-between mb-2">
                  <p className="text-sm font-semibold text-slate-700">AI Confidence Score</p>
                  <p className={`text-2xl font-bold ${
                    authRequest.confidence_score >= 90 ? 'text-green-600' :
                    authRequest.confidence_score >= 70 ? 'text-amber-600' :
                    'text-red-600'
                  }`}>
                    {authRequest.confidence_score}%
                  </p>
                </div>
                <div className="w-full bg-slate-200 rounded-full h-3">
                  <div 
                    className={`h-3 rounded-full ${
                      authRequest.confidence_score >= 90 ? 'bg-green-500' :
                      authRequest.confidence_score >= 70 ? 'bg-amber-500' :
                      'bg-red-500'
                    }`}
                    style={{ width: `${authRequest.confidence_score}%` }}
                  />
                </div>
              </div>
            )}

            {/* Decision Rationale */}
            <div>
              <p className="text-sm font-semibold text-slate-700 mb-2">Decision Rationale</p>
              <div className="bg-slate-50 rounded-lg p-4 border border-slate-200">
                <p className="text-sm text-slate-700 leading-relaxed whitespace-pre-wrap">
                  {authRequest.decision_rationale}
                </p>
              </div>
            </div>

            {/* Policy Criteria Evaluated */}
            {authRequest.policy_criteria_evaluated && authRequest.policy_criteria_evaluated.length > 0 && (
              <div>
                <p className="text-sm font-semibold text-slate-700 mb-3">Policy Criteria Evaluation</p>
                <div className="space-y-2">
                  {authRequest.policy_criteria_evaluated.map((criteria, idx) => (
                    <div key={idx} className="flex items-start gap-3 p-3 bg-white rounded-lg border border-slate-200">
                      <div className="mt-0.5">
                        {criteria.met ? (
                          <CheckCircle className="w-5 h-5 text-green-600" />
                        ) : (
                          <XCircle className="w-5 h-5 text-red-600" />
                        )}
                      </div>
                      <div className="flex-1">
                        <p className="text-sm font-medium text-slate-900">{criteria.criterion}</p>
                        <p className="text-xs text-slate-600 mt-1">{criteria.evidence}</p>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}

            {/* Reviewer Notes */}
            {authRequest.reviewer_notes && (
              <div>
                <p className="text-sm font-semibold text-slate-700 mb-2">Reviewer Notes</p>
                <div className="bg-amber-50 rounded-lg p-4 border border-amber-200">
                  <p className="text-sm text-slate-700 leading-relaxed whitespace-pre-wrap">
                    {authRequest.reviewer_notes}
                  </p>
                </div>
              </div>
            )}
          </CardContent>
        </Card>

        {/* Policy Information */}
        {policy && (
          <Card>
            <CardHeader className="bg-slate-50 border-b">
              <CardTitle className="flex items-center gap-2">
                <FileText className="w-5 h-5 text-slate-600" />
                Applicable Policy
              </CardTitle>
            </CardHeader>
            <CardContent className="p-6 space-y-4">
              <div>
                <p className="text-sm text-slate-600">Policy ID</p>
                <p className="font-medium text-slate-900">{policy.policy_id || 'N/A'}</p>
              </div>
              <div>
                <p className="text-sm text-slate-600">Coverage</p>
                <p className="font-medium text-slate-900">{policy.treatment_type}</p>
              </div>
              {policy.indication && (
                <div>
                  <p className="text-sm text-slate-600">Indication</p>
                  <p className="font-medium text-slate-900">{policy.indication}</p>
                </div>
              )}
              <div>
                <p className="text-sm text-slate-600 mb-2">Approval Criteria</p>
                <div className="bg-slate-50 rounded-lg p-4 border border-slate-200">
                  <p className="text-sm text-slate-700 whitespace-pre-wrap">{policy.approval_criteria}</p>
                </div>
              </div>
              {policy.required_evidence && policy.required_evidence.length > 0 && (
                <div>
                  <p className="text-sm text-slate-600 mb-2">Required Evidence</p>
                  <ul className="space-y-1">
                    {policy.required_evidence.map((evidence, idx) => (
                      <li key={idx} className="text-sm text-slate-700 flex items-start gap-2">
                        <span className="text-blue-600 mt-1">•</span>
                        <span>{evidence}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
            </CardContent>
          </Card>
        )}
      </div>
    </div>
  );
}