import React, { useState } from 'react';
import { useNavigate } from 'react-router-dom';
import { useMutation, useQueryClient, useQuery } from '@tanstack/react-query';
import { base44 } from '@/api/base44Client';
import { Card, CardHeader, CardTitle, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { ArrowLeft, Loader2, Sparkles, AlertCircle, CheckCircle, XCircle, Activity, FileText } from 'lucide-react';
import { toast } from 'sonner';
import { createPageUrl } from '@/utils';
import { Link } from 'react-router-dom';

export default function NewCase() {
  const navigate = useNavigate();
  const queryClient = useQueryClient();
  
  const [step, setStep] = useState('form'); // form, processing, complete
  const [currentStage, setCurrentStage] = useState('');
  const [processingLogs, setProcessingLogs] = useState([]);

  const { data: policies = [] } = useQuery({
    queryKey: ['policies'],
    queryFn: () => base44.entities.PolicyRule.list('-created_date', 100),
  });

  const [formData, setFormData] = useState({
    patient_id: '',
    patient_name: '',
    date_of_birth: '',
    diagnosis_code: '',
    diagnosis_name: '',
    treatment_requested: '',
    genomic_markers: {},
    prior_therapies: [],
    payer_id: '',
    payer_name: '',
    clinical_notes_url: '',
    clinical_summary: ''
  });

  const addLog = (message) => {
    setProcessingLogs(prev => [...prev, { message, timestamp: new Date().toISOString() }]);
  };

  const processCaseMutation = useMutation({
    mutationFn: async (caseData) => {
      setStep('processing');
      setCurrentStage('Creating patient case...');
      addLog('Creating patient case record');

      // Step 1: Create patient case
      const patientCase = await base44.entities.PatientCase.create({
        ...caseData,
        status: 'processing'
      });

      // Step 2: Create authorization request
      setCurrentStage('Initializing authorization request...');
      addLog('Creating authorization request');
      const requestId = `PA-${Date.now()}`;
      const startTime = Date.now();

      const authRequest = await base44.entities.AuthorizationRequest.create({
        request_id: requestId,
        patient_case_id: patientCase.id,
        patient_name: caseData.patient_name,
        treatment_requested: caseData.treatment_requested,
        payer_name: caseData.payer_name,
        submission_timestamp: new Date().toISOString(),
        decision: 'processing',
        workflow_stage: 'extraction',
        status: 'pending'
      });

      // Step 3: Extract clinical data using AI
      setCurrentStage('Extracting clinical data with AI...');
      addLog('Analyzing clinical documentation');

      const extractionPrompt = `You are a medical data extraction specialist. Analyze this clinical case and extract structured data.

Patient Information:
- Name: ${caseData.patient_name}
- Diagnosis: ${caseData.diagnosis_name} (${caseData.diagnosis_code})
- Treatment Requested: ${caseData.treatment_requested}
- Payer: ${caseData.payer_name}

Clinical Summary:
${caseData.clinical_summary}

Genomic Markers: ${JSON.stringify(caseData.genomic_markers)}
Prior Therapies: ${caseData.prior_therapies.join(', ')}

Extract and return structured clinical data including:
- Key biomarkers and their values
- Disease staging if mentioned
- Prior treatment outcomes
- Physician rationale for requested treatment
- Any contraindications or special considerations`;

      const extractedData = await base44.integrations.Core.InvokeLLM({
        prompt: extractionPrompt,
        response_json_schema: {
          type: "object",
          properties: {
            biomarkers: { type: "object" },
            staging: { type: "string" },
            prior_treatment_outcomes: { type: "array", items: { type: "string" } },
            physician_rationale: { type: "string" },
            contraindications: { type: "array", items: { type: "string" } }
          }
        }
      });

      await base44.entities.PatientCase.update(patientCase.id, {
        extracted_clinical_data: extractedData
      });

      // Step 4: Find matching policy
      setCurrentStage('Matching payer policy...');
      addLog('Searching policy database');

      const matchingPolicy = policies.find(p => 
        p.payer_id === caseData.payer_id && 
        p.treatment_type.toLowerCase().includes(caseData.treatment_requested.toLowerCase())
      );

      if (!matchingPolicy) {
        throw new Error('No matching policy found for this treatment and payer');
      }

      await base44.entities.AuthorizationRequest.update(authRequest.id, {
        policy_id: matchingPolicy.id,
        workflow_stage: 'ai_decision'
      });

      // Step 5: AI Decision Engine
      setCurrentStage('Running AI decision engine...');
      addLog('Analyzing case against policy criteria');

      const decisionPrompt = `You are a clinical prior authorization decision engine. Analyze this case and determine approval status.

PATIENT CASE:
- Patient: ${caseData.patient_name}
- Diagnosis: ${caseData.diagnosis_name} (${caseData.diagnosis_code})
- Treatment Requested: ${caseData.treatment_requested}
- Genomic Markers: ${JSON.stringify(caseData.genomic_markers)}
- Prior Therapies: ${caseData.prior_therapies.join(', ')}
- Extracted Clinical Data: ${JSON.stringify(extractedData)}

INSURANCE POLICY:
- Payer: ${matchingPolicy.payer_name}
- Treatment: ${matchingPolicy.treatment_type}
- Approval Criteria: ${matchingPolicy.approval_criteria}
- Required Evidence: ${matchingPolicy.required_evidence?.join(', ')}
- Exclusions: ${matchingPolicy.exclusion_criteria || 'None specified'}

INSTRUCTIONS:
1. Evaluate if the patient meets all approval criteria
2. Check if required evidence is present
3. Verify no exclusion criteria apply
4. Determine decision: APPROVED, DENIED, or REVIEW_REQUIRED
5. Provide confidence score (0-100)
6. List specific policy criteria evaluated and whether each was met
7. Provide detailed rationale citing specific evidence

Return structured decision with high precision.`;

      const aiDecision = await base44.integrations.Core.InvokeLLM({
        prompt: decisionPrompt,
        response_json_schema: {
          type: "object",
          properties: {
            decision: { type: "string", enum: ["approved", "denied", "review_required"] },
            confidence_score: { type: "number" },
            rationale: { type: "string" },
            criteria_evaluated: {
              type: "array",
              items: {
                type: "object",
                properties: {
                  criterion: { type: "string" },
                  met: { type: "boolean" },
                  evidence: { type: "string" }
                }
              }
            },
            evidence_summary: { type: "object" },
            recommendation: { type: "string" }
          }
        }
      });

      const processingTime = (Date.now() - startTime) / 1000;

      // Step 6: Route decision
      setCurrentStage('Routing decision...');
      addLog(`AI Decision: ${aiDecision.decision.toUpperCase()} (${aiDecision.confidence_score}% confidence)`);

      const shouldReview = aiDecision.decision === 'review_required' || aiDecision.confidence_score < 90;

      if (shouldReview) {
        // Create review queue item
        addLog('Flagging for human review');
        await base44.entities.ReviewQueueItem.create({
          request_id: authRequest.request_id,
          patient_case_id: patientCase.id,
          patient_name: caseData.patient_name,
          treatment_requested: caseData.treatment_requested,
          flag_reason: aiDecision.confidence_score < 90 
            ? `Low confidence score (${aiDecision.confidence_score}%). Human verification recommended.`
            : aiDecision.recommendation || 'Requires clinical judgment',
          ai_preliminary_decision: aiDecision.decision,
          ai_confidence: aiDecision.confidence_score,
          priority: aiDecision.confidence_score < 70 ? 'high' : 'normal',
          status: 'pending',
          created_timestamp: new Date().toISOString()
        });
      }

      // Step 7: Update authorization request with audit report link
      setCurrentStage('Finalizing authorization...');
      addLog('Generating audit trail');

      const auditReportUrl = `${window.location.origin}${createPageUrl(`AuditReport?id=${authRequest.id}`)}`;

      await base44.entities.AuthorizationRequest.update(authRequest.id, {
        decision: shouldReview ? 'review_required' : aiDecision.decision,
        ai_decision: aiDecision.decision,
        decision_rationale: aiDecision.rationale,
        confidence_score: aiDecision.confidence_score,
        decision_timestamp: new Date().toISOString(),
        processing_time_seconds: processingTime,
        evidence_extracted: aiDecision.evidence_summary,
        policy_criteria_evaluated: aiDecision.criteria_evaluated,
        workflow_stage: shouldReview ? 'human_review' : 'audit_generation',
        status: shouldReview ? 'pending' : 'completed',
        audit_pdf_url: auditReportUrl
      });

      await base44.entities.PatientCase.update(patientCase.id, {
        status: shouldReview ? 'pending_review' : aiDecision.decision
      });

      addLog('Audit report generated and linked');
      addLog('Authorization processing complete');
      setCurrentStage('Complete!');

      // Fetch the updated authorization request to get the audit URL
      const updatedAuthRequests = await base44.entities.AuthorizationRequest.filter({ id: authRequest.id });
      const updatedAuthRequest = updatedAuthRequests[0];

      return { 
        authRequest: updatedAuthRequest, 
        aiDecision, 
        shouldReview,
        auditReportUrl 
      };
    },
    onSuccess: (data) => {
      queryClient.invalidateQueries(['authRequests']);
      queryClient.invalidateQueries(['reviewQueue']);
      setStep('complete');
      toast.success('Authorization request processed successfully');
    },
    onError: (error) => {
      console.error('Processing error:', error);
      toast.error(`Processing failed: ${error.message}`);
      setStep('form');
      setProcessingLogs([]);
      setCurrentStage('');
    }
  });

  const handleSubmit = (e) => {
    e.preventDefault();
    
    if (!formData.patient_name || !formData.treatment_requested || !formData.payer_id) {
      toast.error('Please fill in all required fields');
      return;
    }

    processCaseMutation.mutate(formData);
  };

  const loadDemoCase = (caseNum) => {
    const demoCases = {
      1: {
        patient_id: 'PT-001',
        patient_name: 'John Smith',
        date_of_birth: '1958-03-15',
        diagnosis_code: 'C34.90',
        diagnosis_name: 'Stage IV Non-Small Cell Lung Cancer',
        treatment_requested: 'Pembrolizumab (Keytruda)',
        genomic_markers: { 'PD-L1 TPS': '75%', 'EGFR': 'Wild-type', 'ALK': 'Negative' },
        prior_therapies: ['Platinum doublet chemotherapy (Carboplatin + Pemetrexed)'],
        payer_id: 'BCBS',
        payer_name: 'Blue Cross Blue Shield',
        clinical_notes_url: 'https://docs.google.com/document/d/sample-clinical-notes-001',
        clinical_summary: 'Patient with metastatic NSCLC, adenocarcinoma subtype. PD-L1 expression 75% by IHC. Progressive disease after 4 cycles of platinum-based chemotherapy. ECOG performance status 1. No autoimmune disease history. Strong candidate for first-line immunotherapy per NCCN guidelines.'
      },
      2: {
        patient_id: 'PT-002',
        patient_name: 'Sarah Johnson',
        date_of_birth: '1965-07-22',
        diagnosis_code: 'C43.9',
        diagnosis_name: 'Stage III Melanoma',
        treatment_requested: 'Nivolumab + Ipilimumab Combination',
        genomic_markers: { 'BRAF': 'V600E mutation detected', 'PD-L1': '45%' },
        prior_therapies: ['Wide local excision', 'Sentinel lymph node biopsy'],
        payer_id: 'AETNA',
        payer_name: 'Aetna',
        clinical_notes_url: 'https://docs.google.com/document/d/sample-clinical-notes-002',
        clinical_summary: 'Unresectable Stage III melanoma with BRAF V600E mutation. Scanned pathology report shows BRAF mutation but numerical percentage unclear in imaging. Patient declined BRAF/MEK inhibitor therapy, requesting immunotherapy combination. Medical oncologist notes potential for high response rate with combination regimen.'
      },
      3: {
        patient_id: 'PT-003',
        patient_name: 'Mike Davis',
        date_of_birth: '1972-11-08',
        diagnosis_code: 'C61',
        diagnosis_name: 'Stage IIA Prostate Cancer',
        treatment_requested: 'Sipuleucel-T (Provenge)',
        genomic_markers: { 'PSA': '8.2 ng/mL', 'Gleason Score': '6' },
        prior_therapies: [],
        payer_id: 'UHC',
        payer_name: 'United Healthcare',
        clinical_notes_url: 'https://docs.google.com/document/d/sample-clinical-notes-003',
        clinical_summary: 'Early stage prostate cancer, Gleason 6, T2aN0M0. Patient requesting Provenge immunotherapy. Policy requires metastatic castration-resistant disease. Patient does not meet advanced disease criteria. Recommended treatment per guidelines is active surveillance or localized therapy.'
      }
    };

    setFormData(demoCases[caseNum]);
    toast.success(`Loaded demo case ${caseNum}`);
  };

  if (step === 'processing') {
    return (
      <div className="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 p-6">
        <div className="max-w-3xl mx-auto">
          <Card className="border-2 border-blue-500 shadow-lg">
            <CardHeader className="bg-blue-50 border-b">
              <CardTitle className="text-xl flex items-center gap-2">
                <Loader2 className="w-6 h-6 animate-spin text-blue-600" />
                Processing Authorization Request
              </CardTitle>
            </CardHeader>
            <CardContent className="p-6 space-y-6">
              <div className="space-y-4">
                <div className="flex items-center gap-3">
                  <Sparkles className="w-5 h-5 text-blue-600 animate-pulse" />
                  <p className="font-semibold text-lg text-slate-900">{currentStage}</p>
                </div>

                <div className="bg-slate-900 rounded-lg p-4 max-h-96 overflow-y-auto">
                  <div className="space-y-2 font-mono text-xs">
                    {processingLogs.map((log, idx) => (
                      <div key={idx} className="text-green-400">
                        <span className="text-slate-500">[{new Date(log.timestamp).toLocaleTimeString()}]</span> {log.message}
                      </div>
                    ))}
                    <div className="text-green-400 animate-pulse">▊</div>
                  </div>
                </div>
              </div>

              <p className="text-sm text-slate-600 text-center">
                This typically takes 10-15 seconds. Please wait while we analyze the case...
              </p>
            </CardContent>
          </Card>
        </div>
      </div>
    );
  }

  if (step === 'complete') {
    const completedAuthRequest = processCaseMutation.data?.authRequest;
    const completedDecision = processCaseMutation.data?.aiDecision;
    const needsReview = processCaseMutation.data?.shouldReview;
    const auditUrl = processCaseMutation.data?.auditReportUrl;

    if (!completedAuthRequest) {
      return (
        <div className="min-h-screen bg-gradient-to-br from-slate-50 to-green-50 p-6 flex items-center justify-center">
          <Card className="max-w-2xl">
            <CardContent className="p-12 text-center">
              <Loader2 className="w-12 h-12 animate-spin text-blue-600 mx-auto mb-4" />
              <p className="text-slate-600">Loading results...</p>
            </CardContent>
          </Card>
        </div>
      );
    }

    return (
      <div className="min-h-screen bg-gradient-to-br from-slate-50 to-green-50 p-6 flex items-center justify-center">
        <Card className="max-w-3xl border-2 border-green-500 shadow-lg">
          <CardContent className="p-12 space-y-6">
            <div className="text-center">
              <div className="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <CheckCircle className="w-10 h-10 text-green-600" />
              </div>
              <h2 className="text-3xl font-bold text-slate-900 mb-2">Processing Complete!</h2>
              <p className="text-lg text-slate-600 mb-6">
                Authorization processed in {completedAuthRequest?.processing_time_seconds?.toFixed(2)} seconds
              </p>
              
              {/* Decision Badge */}
              <div className={`inline-flex items-center gap-2 px-6 py-3 rounded-lg font-semibold text-lg mb-6 ${
                needsReview ? 'bg-amber-100 text-amber-800' :
                completedDecision?.decision === 'approved' ? 'bg-green-100 text-green-800' :
                'bg-red-100 text-red-800'
              }`}>
                {needsReview ? (
                  <>
                    <AlertCircle className="w-6 h-6" />
                    FLAGGED FOR REVIEW
                  </>
                ) : completedDecision?.decision === 'approved' ? (
                  <>
                    <CheckCircle className="w-6 h-6" />
                    APPROVED
                  </>
                ) : (
                  <>
                    <XCircle className="w-6 h-6" />
                    DENIED
                  </>
                )}
              </div>

              <p className="text-sm text-slate-600 mb-2">
                AI Confidence: <span className="font-bold text-lg">{completedAuthRequest?.confidence_score}%</span>
              </p>

              {/* Debug info - remove later */}
              <div className="mt-4 p-3 bg-slate-100 rounded text-xs text-left">
                <p className="font-mono">Request ID: {completedAuthRequest?.id}</p>
                <p className="font-mono">Status: {completedAuthRequest?.status}</p>
                <p className="font-mono">Decision: {completedAuthRequest?.decision}</p>
                <p className="font-mono">Audit URL: {auditUrl ? '✓ Generated' : '✗ Missing'}</p>
                <p className="font-mono">Needs Review: {needsReview ? 'Yes' : 'No'}</p>
              </div>
            </div>

            {/* Action Buttons */}
            <div className="space-y-3 pt-6">
              <Link to={createPageUrl(`CaseDetail?id=${completedAuthRequest?.id}`)} className="block">
                <Button className="w-full h-12 bg-blue-600 hover:bg-blue-700">
                  <Activity className="w-5 h-5 mr-2" />
                  View Case Details
                </Button>
              </Link>
              
              {!needsReview && auditUrl && (
                <Link to={createPageUrl(`AuditReport?id=${completedAuthRequest?.id}`)} className="block">
                  <Button className="w-full h-12 bg-green-600 hover:bg-green-700">
                    <FileText className="w-5 h-5 mr-2" />
                    View Audit Report
                  </Button>
                </Link>
              )}
              
              {needsReview && (
                <Link to={createPageUrl('ReviewQueue')} className="block">
                  <Button className="w-full h-12 bg-amber-600 hover:bg-amber-700">
                    <AlertCircle className="w-5 h-5 mr-2" />
                    Go to Review Queue
                  </Button>
                </Link>
              )}

              <div className="text-center pt-2">
                <Link to={createPageUrl('Dashboard')}>
                  <Button variant="outline" className="w-full">
                    Return to Dashboard
                  </Button>
                </Link>
              </div>
            </div>
          </CardContent>
        </Card>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 p-6">
      <div className="max-w-4xl mx-auto">
        <div className="mb-6">
          <Link to={createPageUrl('Dashboard')}>
            <Button variant="ghost" className="mb-4">
              <ArrowLeft className="w-4 h-4 mr-2" />
              Back to Dashboard
            </Button>
          </Link>
          <h1 className="text-3xl font-bold text-slate-900 mb-2">New Prior Authorization Request</h1>
          <p className="text-slate-600">Submit a new case for AI-powered authorization processing</p>
        </div>

        {/* Demo Cases */}
        <Card className="mb-6 border-2 border-purple-200 bg-purple-50">
          <CardHeader>
            <CardTitle className="text-lg flex items-center gap-2">
              <Sparkles className="w-5 h-5 text-purple-600" />
              Load Demo Scenarios
            </CardTitle>
          </CardHeader>
          <CardContent>
            <div className="grid grid-cols-1 md:grid-cols-3 gap-3">
              <Button onClick={() => loadDemoCase(1)} variant="outline" className="h-auto py-3 flex flex-col items-start">
                <span className="font-semibold text-sm">Case 1: Auto-Approve</span>
                <span className="text-xs text-slate-600 mt-1">Lung Cancer - Keytruda</span>
              </Button>
              <Button onClick={() => loadDemoCase(2)} variant="outline" className="h-auto py-3 flex flex-col items-start">
                <span className="font-semibold text-sm">Case 2: Human Review</span>
                <span className="text-xs text-slate-600 mt-1">Melanoma - Combo Therapy</span>
              </Button>
              <Button onClick={() => loadDemoCase(3)} variant="outline" className="h-auto py-3 flex flex-col items-start">
                <span className="font-semibold text-sm">Case 3: Auto-Deny</span>
                <span className="text-xs text-slate-600 mt-1">Early Prostate Ca</span>
              </Button>
            </div>
          </CardContent>
        </Card>

        <form onSubmit={handleSubmit}>
          <Card>
            <CardHeader className="bg-slate-50 border-b">
              <CardTitle>Patient & Case Information</CardTitle>
            </CardHeader>
            <CardContent className="p-6 space-y-6">
              {/* Patient Info */}
              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <Label>Patient ID *</Label>
                  <Input
                    value={formData.patient_id}
                    onChange={(e) => setFormData({...formData, patient_id: e.target.value})}
                    placeholder="PT-001"
                  />
                </div>
                <div>
                  <Label>Patient Name *</Label>
                  <Input
                    value={formData.patient_name}
                    onChange={(e) => setFormData({...formData, patient_name: e.target.value})}
                    placeholder="John Smith"
                  />
                </div>
                <div>
                  <Label>Date of Birth</Label>
                  <Input
                    type="date"
                    value={formData.date_of_birth}
                    onChange={(e) => setFormData({...formData, date_of_birth: e.target.value})}
                  />
                </div>
                <div>
                  <Label>Diagnosis Code (ICD-10) *</Label>
                  <Input
                    value={formData.diagnosis_code}
                    onChange={(e) => setFormData({...formData, diagnosis_code: e.target.value})}
                    placeholder="C34.90"
                  />
                </div>
              </div>

              <div>
                <Label>Diagnosis Name *</Label>
                <Input
                  value={formData.diagnosis_name}
                  onChange={(e) => setFormData({...formData, diagnosis_name: e.target.value})}
                  placeholder="Stage IV Non-Small Cell Lung Cancer"
                />
              </div>

              <div>
                <Label>Treatment Requested *</Label>
                <Input
                  value={formData.treatment_requested}
                  onChange={(e) => setFormData({...formData, treatment_requested: e.target.value})}
                  placeholder="Pembrolizumab (Keytruda)"
                />
              </div>

              {/* Payer Info */}
              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <Label>Payer ID *</Label>
                  <Select value={formData.payer_id} onValueChange={(val) => setFormData({...formData, payer_id: val})}>
                    <SelectTrigger>
                      <SelectValue placeholder="Select payer" />
                    </SelectTrigger>
                    <SelectContent>
                      <SelectItem value="BCBS">Blue Cross Blue Shield</SelectItem>
                      <SelectItem value="AETNA">Aetna</SelectItem>
                      <SelectItem value="UHC">United Healthcare</SelectItem>
                      <SelectItem value="CIGNA">Cigna</SelectItem>
                    </SelectContent>
                  </Select>
                </div>
                <div>
                  <Label>Payer Name</Label>
                  <Input
                    value={formData.payer_name}
                    onChange={(e) => setFormData({...formData, payer_name: e.target.value})}
                    placeholder="Auto-filled from Payer ID"
                  />
                </div>
              </div>

              <div>
                <Label>Clinical Notes URL</Label>
                <Input
                  value={formData.clinical_notes_url}
                  onChange={(e) => setFormData({...formData, clinical_notes_url: e.target.value})}
                  placeholder="Link to clinical documentation"
                />
              </div>

              <div>
                <Label>Clinical Summary *</Label>
                <Textarea
                  value={formData.clinical_summary}
                  onChange={(e) => setFormData({...formData, clinical_summary: e.target.value})}
                  placeholder="Brief clinical summary including staging, biomarkers, prior treatments, and physician rationale..."
                  className="min-h-32"
                />
              </div>

              <div>
                <Label>Prior Therapies (comma-separated)</Label>
                <Input
                  value={formData.prior_therapies.join(', ')}
                  onChange={(e) => setFormData({...formData, prior_therapies: e.target.value.split(',').map(t => t.trim()).filter(Boolean)})}
                  placeholder="Platinum doublet chemotherapy, Radiation"
                />
              </div>

              <div className="bg-amber-50 border border-amber-200 rounded-lg p-4">
                <div className="flex gap-2">
                  <AlertCircle className="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" />
                  <div>
                    <p className="text-sm font-semibold text-amber-900">Note</p>
                    <p className="text-sm text-amber-800 mt-1">
                      This demo uses AI to extract clinical data and match policy criteria. In production, this would integrate with EHR systems and policy databases.
                    </p>
                  </div>
                </div>
              </div>
            </CardContent>
          </Card>

          <div className="mt-6 flex gap-3">
            <Button type="submit" disabled={processCaseMutation.isPending} className="flex-1 bg-blue-600 hover:bg-blue-700 h-12 text-lg">
              {processCaseMutation.isPending ? (
                <>
                  <Loader2 className="w-5 h-5 mr-2 animate-spin" />
                  Processing...
                </>
              ) : (
                <>
                  <Sparkles className="w-5 h-5 mr-2" />
                  Process Authorization
                </>
              )}
            </Button>
          </div>
        </form>
      </div>
    </div>
  );
}