import React, { useState } from 'react';
import { useQuery } from '@tanstack/react-query';
import { base44 } from '@/api/base44Client';
import { Card } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Skeleton } from "@/components/ui/skeleton";
import { Search, Filter } from 'lucide-react';
import CaseCard from '../components/cases/CaseCard';

export default function CasesList() {
  const [searchTerm, setSearchTerm] = useState('');
  const [filterStatus, setFilterStatus] = useState('all');

  const { data: authRequests = [], isLoading } = useQuery({
    queryKey: ['authRequests'],
    queryFn: () => base44.entities.AuthorizationRequest.list('-created_date', 100),
  });

  const { data: patientCases = [] } = useQuery({
    queryKey: ['patientCases'],
    queryFn: () => base44.entities.PatientCase.list('-created_date', 100),
  });

  const filteredRequests = authRequests.filter(request => {
    const matchesSearch = !searchTerm || 
      request.patient_name?.toLowerCase().includes(searchTerm.toLowerCase()) ||
      request.treatment_requested?.toLowerCase().includes(searchTerm.toLowerCase()) ||
      request.request_id?.toLowerCase().includes(searchTerm.toLowerCase());
    
    const matchesStatus = filterStatus === 'all' || request.decision === filterStatus;

    return matchesSearch && matchesStatus;
  });

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 p-6">
      <div className="max-w-7xl mx-auto">
        <div className="mb-8">
          <h1 className="text-3xl font-bold text-slate-900 mb-2">All Authorization Cases</h1>
          <p className="text-slate-600">View and manage all prior authorization requests</p>
        </div>

        {/* Filters */}
        <Card className="p-6 mb-6">
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div className="relative">
              <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-slate-400" />
              <Input
                placeholder="Search by patient name, treatment, or request ID..."
                value={searchTerm}
                onChange={(e) => setSearchTerm(e.target.value)}
                className="pl-10"
              />
            </div>
            <div className="relative">
              <Filter className="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-slate-400 pointer-events-none z-10" />
              <Select value={filterStatus} onValueChange={setFilterStatus}>
                <SelectTrigger className="pl-10">
                  <SelectValue placeholder="Filter by status" />
                </SelectTrigger>
                <SelectContent>
                  <SelectItem value="all">All Statuses</SelectItem>
                  <SelectItem value="approved">Approved</SelectItem>
                  <SelectItem value="denied">Denied</SelectItem>
                  <SelectItem value="review_required">Review Required</SelectItem>
                  <SelectItem value="processing">Processing</SelectItem>
                </SelectContent>
              </Select>
            </div>
          </div>
        </Card>

        {/* Results Count */}
        <div className="mb-4">
          <p className="text-sm text-slate-600">
            Showing {filteredRequests.length} of {authRequests.length} cases
          </p>
        </div>

        {/* Cases Grid */}
        {isLoading ? (
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {Array(6).fill(0).map((_, i) => (
              <Skeleton key={i} className="h-96" />
            ))}
          </div>
        ) : filteredRequests.length === 0 ? (
          <Card className="p-12 text-center">
            <p className="text-lg font-medium text-slate-600 mb-2">No cases found</p>
            <p className="text-sm text-slate-500">Try adjusting your search or filters</p>
          </Card>
        ) : (
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {filteredRequests.map((request) => {
              const patientCase = patientCases.find(c => c.id === request.patient_case_id);
              return (
                <CaseCard 
                  key={request.id} 
                  authRequest={request} 
                  patientCase={patientCase}
                />
              );
            })}
          </div>
        )}
      </div>
    </div>
  );
}