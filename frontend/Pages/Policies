import React, { useState } from 'react';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { base44 } from '@/api/base44Client';
import { Card, CardHeader, CardTitle, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import { Badge } from "@/components/ui/badge";
import { Skeleton } from "@/components/ui/skeleton";
import { FileText, Plus, Building2, CheckCircle } from 'lucide-react';
import { toast } from 'sonner';

export default function Policies() {
  const queryClient = useQueryClient();
  const [showForm, setShowForm] = useState(false);
  const [formData, setFormData] = useState({
    policy_id: '',
    payer_name: '',
    payer_id: '',
    treatment_type: '',
    indication: '',
    approval_criteria: '',
    required_evidence: [],
    exclusion_criteria: '',
    effective_date: '',
    is_active: true
  });

  const { data: policies = [], isLoading } = useQuery({
    queryKey: ['policies'],
    queryFn: () => base44.entities.PolicyRule.list('-created_date', 100),
  });

  const createPolicyMutation = useMutation({
    mutationFn: (policyData) => base44.entities.PolicyRule.create(policyData),
    onSuccess: () => {
      queryClient.invalidateQueries(['policies']);
      setShowForm(false);
      setFormData({
        policy_id: '',
        payer_name: '',
        payer_id: '',
        treatment_type: '',
        indication: '',
        approval_criteria: '',
        required_evidence: [],
        exclusion_criteria: '',
        effective_date: '',
        is_active: true
      });
      toast.success('Policy created successfully');
    }
  });

  const handleSubmit = (e) => {
    e.preventDefault();
    createPolicyMutation.mutate(formData);
  };

  const loadDemoPolicy = (policyNum) => {
    const demoPolicies = {
      1: {
        policy_id: 'BCBS-KEYTRUDA-2024',
        payer_name: 'Blue Cross Blue Shield',
        payer_id: 'BCBS',
        treatment_type: 'Pembrolizumab (Keytruda)',
        indication: 'First-line treatment of metastatic NSCLC',
        approval_criteria: `Prior authorization approved for pembrolizumab as first-line treatment for metastatic non-small cell lung cancer when ALL of the following criteria are met:

1. Confirmed diagnosis of metastatic NSCLC (Stage IV)
2. PD-L1 tumor proportion score (TPS) ≥50% by FDA-approved test
3. Disease progression during or after platinum-based chemotherapy
4. EGFR or ALK genomic tumor aberrations testing completed and negative
5. ECOG performance status 0-1
6. No contraindications to immunotherapy (no active autoimmune disease requiring systemic treatment)`,
        required_evidence: [
          'Pathology report confirming NSCLC',
          'PD-L1 IHC test results showing TPS ≥50%',
          'Documentation of prior platinum-based chemotherapy',
          'EGFR and ALK testing results',
          'Current ECOG performance status'
        ],
        exclusion_criteria: 'Active autoimmune disease, active CNS metastases, concurrent systemic steroids >10mg prednisone',
        effective_date: '2024-01-01',
        is_active: true
      },
      2: {
        policy_id: 'AETNA-COMBO-IMMUNO-2024',
        payer_name: 'Aetna',
        payer_id: 'AETNA',
        treatment_type: 'Nivolumab + Ipilimumab',
        indication: 'Advanced melanoma',
        approval_criteria: `Prior authorization approved for nivolumab plus ipilimumab combination therapy for advanced melanoma when ALL criteria are met:

1. Unresectable Stage III or Stage IV melanoma
2. No prior systemic therapy for advanced disease
3. BRAF mutation status documented
4. ECOG performance status 0-1
5. Adequate organ function per protocol
6. Patient can tolerate aggressive immunotherapy per oncologist assessment`,
        required_evidence: [
          'Pathology confirming melanoma',
          'Staging documentation (III or IV)',
          'BRAF mutation testing results',
          'ECOG performance status',
          'Laboratory values (CBC, LFTs, renal function)'
        ],
        exclusion_criteria: 'Active autoimmune disease, history of severe immune-related adverse events, significant cardiovascular disease',
        effective_date: '2024-01-01',
        is_active: true
      },
      3: {
        policy_id: 'UHC-PROVENGE-2024',
        payer_name: 'United Healthcare',
        payer_id: 'UHC',
        treatment_type: 'Sipuleucel-T (Provenge)',
        indication: 'Metastatic castration-resistant prostate cancer',
        approval_criteria: `Prior authorization approved for sipuleucel-T (Provenge) for metastatic castration-resistant prostate cancer when ALL criteria met:

1. Confirmed diagnosis of metastatic castration-resistant prostate cancer (mCRPC)
2. Asymptomatic or minimally symptomatic disease
3. No visceral metastases
4. ECOG performance status 0-1
5. Rising PSA despite androgen deprivation therapy
6. Adequate organ function and performance status for leukapheresis`,
        required_evidence: [
          'Imaging confirming metastatic disease',
          'Documentation of castration-resistant status',
          'PSA trend showing biochemical progression',
          'Symptom assessment',
          'Performance status documentation'
        ],
        exclusion_criteria: 'Symptomatic disease requiring immediate systemic therapy, visceral metastases, inadequate performance status, localized disease only',
        effective_date: '2024-01-01',
        is_active: true
      }
    };

    setFormData(demoPolicies[policyNum]);
    setShowForm(true);
    toast.success(`Loaded demo policy ${policyNum}`);
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 to-purple-50 p-6">
      <div className="max-w-7xl mx-auto">
        <div className="flex items-center justify-between mb-8">
          <div>
            <h1 className="text-3xl font-bold text-slate-900 mb-2">Policy Rules Database</h1>
            <p className="text-slate-600">Manage payer authorization policies and criteria</p>
          </div>
          <div className="flex gap-3">
            <Button onClick={() => loadDemoPolicy(1)} variant="outline">Demo 1</Button>
            <Button onClick={() => loadDemoPolicy(2)} variant="outline">Demo 2</Button>
            <Button onClick={() => loadDemoPolicy(3)} variant="outline">Demo 3</Button>
            <Button onClick={() => setShowForm(!showForm)} className="bg-purple-600 hover:bg-purple-700">
              <Plus className="w-4 h-4 mr-2" />
              Add Policy
            </Button>
          </div>
        </div>

        {/* Add Policy Form */}
        {showForm && (
          <Card className="mb-8 border-2 border-purple-300">
            <CardHeader className="bg-purple-50">
              <CardTitle>Add New Policy Rule</CardTitle>
            </CardHeader>
            <CardContent className="p-6">
              <form onSubmit={handleSubmit} className="space-y-4">
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <Label>Policy ID *</Label>
                    <Input
                      value={formData.policy_id}
                      onChange={(e) => setFormData({...formData, policy_id: e.target.value})}
                      placeholder="BCBS-KEYTRUDA-2024"
                      required
                    />
                  </div>
                  <div>
                    <Label>Payer Name *</Label>
                    <Input
                      value={formData.payer_name}
                      onChange={(e) => setFormData({...formData, payer_name: e.target.value})}
                      placeholder="Blue Cross Blue Shield"
                      required
                    />
                  </div>
                  <div>
                    <Label>Payer ID *</Label>
                    <Input
                      value={formData.payer_id}
                      onChange={(e) => setFormData({...formData, payer_id: e.target.value})}
                      placeholder="BCBS"
                      required
                    />
                  </div>
                  <div>
                    <Label>Treatment Type *</Label>
                    <Input
                      value={formData.treatment_type}
                      onChange={(e) => setFormData({...formData, treatment_type: e.target.value})}
                      placeholder="Pembrolizumab (Keytruda)"
                      required
                    />
                  </div>
                </div>

                <div>
                  <Label>Indication</Label>
                  <Input
                    value={formData.indication}
                    onChange={(e) => setFormData({...formData, indication: e.target.value})}
                    placeholder="First-line treatment of metastatic NSCLC"
                  />
                </div>

                <div>
                  <Label>Approval Criteria *</Label>
                  <Textarea
                    value={formData.approval_criteria}
                    onChange={(e) => setFormData({...formData, approval_criteria: e.target.value})}
                    placeholder="Detailed approval criteria..."
                    className="min-h-32"
                    required
                  />
                </div>

                <div>
                  <Label>Required Evidence (comma-separated)</Label>
                  <Input
                    value={formData.required_evidence.join(', ')}
                    onChange={(e) => setFormData({...formData, required_evidence: e.target.value.split(',').map(s => s.trim()).filter(Boolean)})}
                    placeholder="Pathology report, Lab results, etc."
                  />
                </div>

                <div>
                  <Label>Exclusion Criteria</Label>
                  <Textarea
                    value={formData.exclusion_criteria}
                    onChange={(e) => setFormData({...formData, exclusion_criteria: e.target.value})}
                    placeholder="Conditions that disqualify approval..."
                    className="min-h-24"
                  />
                </div>

                <div>
                  <Label>Effective Date</Label>
                  <Input
                    type="date"
                    value={formData.effective_date}
                    onChange={(e) => setFormData({...formData, effective_date: e.target.value})}
                  />
                </div>

                <div className="flex gap-3">
                  <Button type="submit" disabled={createPolicyMutation.isPending} className="bg-purple-600 hover:bg-purple-700">
                    Create Policy
                  </Button>
                  <Button type="button" variant="outline" onClick={() => setShowForm(false)}>
                    Cancel
                  </Button>
                </div>
              </form>
            </CardContent>
          </Card>
        )}

        {/* Policies List */}
        {isLoading ? (
          <div className="space-y-4">
            {Array(3).fill(0).map((_, i) => <Skeleton key={i} className="h-64" />)}
          </div>
        ) : policies.length === 0 ? (
          <Card className="p-12 text-center">
            <FileText className="w-16 h-16 text-slate-300 mx-auto mb-4" />
            <p className="text-lg font-medium text-slate-600 mb-2">No policies configured</p>
            <p className="text-sm text-slate-500 mb-4">Add your first policy rule to get started</p>
            <Button onClick={() => setShowForm(true)} className="bg-purple-600 hover:bg-purple-700">
              <Plus className="w-4 h-4 mr-2" />
              Add Policy
            </Button>
          </Card>
        ) : (
          <div className="grid grid-cols-1 gap-6">
            {policies.map((policy) => (
              <Card key={policy.id} className="border-l-4 border-l-purple-500">
                <CardHeader className="bg-slate-50 border-b">
                  <div className="flex items-start justify-between">
                    <div>
                      <CardTitle className="text-lg mb-2 flex items-center gap-2">
                        <Building2 className="w-5 h-5 text-purple-600" />
                        {policy.payer_name} - {policy.treatment_type}
                      </CardTitle>
                      <p className="text-sm text-slate-600">Policy ID: {policy.policy_id}</p>
                    </div>
                    {policy.is_active && (
                      <Badge className="bg-green-100 text-green-800 border-green-200 flex items-center gap-1">
                        <CheckCircle className="w-3 h-3" />
                        Active
                      </Badge>
                    )}
                  </div>
                </CardHeader>
                <CardContent className="p-6 space-y-4">
                  {policy.indication && (
                    <div>
                      <p className="text-sm font-semibold text-slate-700">Indication:</p>
                      <p className="text-sm text-slate-600">{policy.indication}</p>
                    </div>
                  )}
                  
                  <div>
                    <p className="text-sm font-semibold text-slate-700 mb-2">Approval Criteria:</p>
                    <div className="bg-slate-50 rounded-lg p-4 border border-slate-200">
                      <p className="text-sm text-slate-700 whitespace-pre-wrap">{policy.approval_criteria}</p>
                    </div>
                  </div>

                  {policy.required_evidence && policy.required_evidence.length > 0 && (
                    <div>
                      <p className="text-sm font-semibold text-slate-700 mb-2">Required Evidence:</p>
                      <ul className="space-y-1">
                        {policy.required_evidence.map((evidence, idx) => (
                          <li key={idx} className="text-sm text-slate-600 flex items-start gap-2">
                            <span className="text-purple-600 mt-1">•</span>
                            <span>{evidence}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}

                  {policy.exclusion_criteria && (
                    <div>
                      <p className="text-sm font-semibold text-slate-700 mb-2">Exclusion Criteria:</p>
                      <p className="text-sm text-slate-600">{policy.exclusion_criteria}</p>
                    </div>
                  )}

                  {policy.effective_date && (
                    <div className="pt-4 border-t">
                      <p className="text-xs text-slate-500">
                        Effective Date: {new Date(policy.effective_date).toLocaleDateString()}
                      </p>
                    </div>
                  )}
                </CardContent>
              </Card>
            ))}
          </div>
        )}
      </div>
    </div>
  );
}